<div class="container">
  <span class="page-title">配送先編集</span>
  <div class="row">

    <div class="col-md-9">
      <%= form_with model: @address, url: public_address_path, local:true do |f| %>
      <div class="edit-address-table">
        <div>
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code %>
        </div>
        <div>
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>
        <div>
          <%= f.label :宛名 %>
          <%= f.text_field :name %>
        </div>
      </div>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      <% end %>
    </div>

  </div>
</div>