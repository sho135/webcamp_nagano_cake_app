<div class="container">
  <span class="page-title">配送先登録/一覧</span>
  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @address, url: public_addresses_path, local:true do |f| %>

      <div class="address-table">
        <div>
          <%= f.label :郵便番号（ハイフンなし）%>
          <%= f.text_field :postal_code %>
        </div>
        <div>
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>
        <div>
          <%= f.label :宛名 %>
          <%= f.text_field :name %>
        </div>
      </div>
      <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>

      <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
              <%= link_to "編集する", edit_public_adress_path, class: "btn btn-success" %>
              <%= link_to "削除する", public_address_path(address), class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>

    </div>
  </div>
</div>

