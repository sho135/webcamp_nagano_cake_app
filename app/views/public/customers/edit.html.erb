<div class="container">

  <div class="row mb-5">
    <div class="col-3">
      <span>会員情報編集</span>
      <%= form_with model: @customer, url: public_customer_path , local:true do |f| %>
    </div>
  </div>



  <div class="row mb-2">
    <div class="col-3">氏名</div>
    <div class="col-2"><%= f.text_field :last_name %></div>
    <div class="col-2"><%= f.text_field :first_name %></div>
  </div>

  <div class="row mb-2">
   <div class="col-3">フリガナ</div>
    <div class="col-2"><%= f.text_field :last_name_kana %></div>
    <div class="col-2"><%= f.text_field :first_name_kanaast_name  %></div>
  </div>

  <div class="row mb-2">
   <div class="col-3">郵便番号</div>
    <div class="col-2"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row mb-2">
   <div class="col-3">住所</div>
    <div class="col-2"><%= f.text_field :address %></div>
  </div>

  <div class="row mb-2">
   <div class="col-3">電話番号</div>
    <div class="col-2"><%= f.number_field :telephone_number %></div>
  </div>

  <div class="row mb-2">
   <div class="col-3">メールアドレス</div>
    <div class="col-2"><%= f.text_field :email %></div>
  </div>

  <div class="row mb-2">
      <div class="col-3"></div>
        <div class="col-2"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
        <div class="col-2"><%= link_to "退会する", unsubscribe_public_customers_path, class: "btn btn-danger" %></div>
        <% end %>
      </div>
  </div>

</div>