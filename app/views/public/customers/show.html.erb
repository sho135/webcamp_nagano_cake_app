<main>
 <div class="page-title">マイページ</div>

   <table class="chapter-table">
    <tbody>
     <tr>
      <td><span class="chapter-title">登録情報</span></td>
      <td><span><%= link_to "編集する", edit_public_customer_path , class: "btn btn-success btn-sm" %></span></td>
     </tr>
    </tbody>
   </table>


   <table class="mypage-table">
     <tbody>
       <tr>
         <td>氏名</td>
         <td><%= @customer.last_name %> <%= @customer.first_name %></td>
       </tr>

        <tr>
         <td>カナ</td>
         <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
       </tr>

        <tr>
         <td>郵便番号</td>
         <td><%= @customer.postal_code %></td>
       </tr>

        <tr>
         <td>住所<td>
         <td><%= @customer.address %></td>
       </tr>

        <tr>
         <td>電話番号</td>
         <td><%= @customer.telephone_number %></td>
       </tr>

        <tr>
         <td>メールアドレス</td>
         <td><%= @customer.email %></td>
       </tr>

     </tbody>
   </table>

   <table class="chapter-table">
    <tbody>
     <tr>
      <td><span class="chapter-title">配送先</span> <%= link_to "一覧を見る", class: "btn btn-primary btn-sm" %></td>
     </tr>
     <td><span class="chapter-title">注文履歴</span> <%= link_to "一覧を見る", class: "btn btn-primary btn-sm" %></td>
    </tbody>
   </table>
</main>