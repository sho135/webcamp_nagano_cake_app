<div class="container">

    <div class="row mb-5">
      <div class="col-3">
        <span>新規会員登録</span>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :名前 %></div>
      <div class="col-1"><%= f.label :（姓） %></div>
      <div class="col-mg-4"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
      <div class="col-1"><%= f.label :（名） %></div>
      <div class="col-mg-4"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :フリガナ %></div>
      <div class="col-1"><%= f.label :（セイ） %></div>
      <div class="col-mg-4"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></div>
      <div class="col-1"><%= f.label :（メイ） %></div>
      <div class="col-mg-4"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :郵便番号（ハイフンなし）  %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :住所 %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :電話番号（ハイフンなし） %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
    </div>

     <div class="row mb-2">
      <div class="col-3"><%= f.label :パスワード（確認用） %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-4"></div>
        <div class="col-mg-4">
          <%= f.submit "新規登録", class: "btn btn-success"%>
          <% end %>
        </div>
    </div>
    <span>すでに登録済みの方</span>
    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
  </div>






