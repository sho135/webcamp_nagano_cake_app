<div class="container">
  <span class="page-title">注文情報確認<span>
  <div class="row">

    <div class="col-9">
      <table class="comfirm-table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.item_name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
          <% @sum += cart_item.item.with_tax_price*cart_item.amount %>
          <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-3">
    <table class="price-table" >
      <tbody>
        <tr>
          <th>送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @sum %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td><%= @sum + 800 %></td>
        </tr>
      </tbody>
    </table>
  </div>


    <%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

