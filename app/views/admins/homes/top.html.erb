<div class="container">
  <span class="page-title">注文履歴一覧</span>

  <table class="table order-table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admins_order_path(order) do %>
          <%= order.created_at.strftime('%Y/%m/%d') %>
          <% end %>
        </td>
        <td><%= order.name %></td>
        <td>
          <% @sum = 0 %>
          <% order.order_details.each do |order_detail| %>
          <% @sum += order_detail.amount %>
          <% end %>
          <%= @sum %>
        </td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>