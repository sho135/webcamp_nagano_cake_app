<div class="container">
  <div class="row mb-5">
      <div class="col-3">
        <h2>管理者登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :パスワード（確認用） %></div>
      <div class="col-1"></div>
      <div class="col-mg-4"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>


    <div class="row mb-2">
      <div class="col-4"></div>
        <div class="col-mg-4">
          <%= f.submit "新規登録", class: "btn btn-success"%>
          <% end %>
        </div>
    </div>

    <div class="row mb-2">
      <span>すでに登録済みの方</span>
      <%= link_to "こちら", new_admin_session_path %>からログインしてください。
    </div>


</div>








