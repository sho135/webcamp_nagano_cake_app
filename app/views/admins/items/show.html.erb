<div class="container">
  <h1>商品詳細</h1>
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @items, image, :fill, 100, 100, fallback: "no_image.jpg" %>
    </div>

    <div class="col-md-9">
      <table class="table">

        <tr>
          <th>商品名</th>
          <td><%= @item.item_name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre_id %></td>
        </tr>

        <tr>
          <th>税込価格(税抜価格)</th>
          <td><%= @item.price %></td>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_active %></td>
        </tr>

      </table>
      <td><%= link_to '編集する', edit_admins_item_path(@item), class: "btn btn-success" %></td>
    </div>
  </div>
</div>