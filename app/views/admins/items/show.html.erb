<div class="container">
  <span class="page-title">商品詳細</span>
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @item, :image, size: "300x200" %>
    </div>

    <div class="col-md-9">
      <table class="table">

        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <th>税込価格(税抜価格)</th>
          <td><%= @item.price %></td>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
             販売中
            <% else %>
            販売停止中
            <% end %>
          </td>
        </tr>

      </table>
      <td><%= link_to '編集する', edit_admins_item_path(@item), class: "btn btn-success" %></td>
    </div>
  </div>
</div>