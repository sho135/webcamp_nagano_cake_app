<div class="container">
  <h1>商品一覧</h1>

  <%= link_to "+", new_admins_item_path, class: "btn btn-light btn-circle pull-right" %>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.item_name %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.genre_name %></td>
        <td><%= item.is_active %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>