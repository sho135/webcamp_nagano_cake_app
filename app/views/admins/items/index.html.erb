<div class="container">
  <span class="page-title">商品一覧</span>

  <%= link_to "+", new_admins_item_path, class: "btn btn-light btn-circle pull-right" %>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.item_name, admins_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.genre_name %></td>
        <td>
          <% if item.is_active == true %>
           販売中
          <% else %>
           販売停止中
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>