<div class="container">
  <span class="page-title">注文履歴詳細</span>

  <div class="row">
    <div class="col-md-9">
      <table class="table">
        <tr>
          <th>購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admins_order_path, method: :patch, local: true do |f| %>
           <!--セレクトボックス入れる-->
            <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製造ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.price %></td>
              <td><%= order_detail.amount %></td>
              <td>
                <%= %>
                </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @sum %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%=  %></td>
        </tr>
      </table>
    </div>
  </div>
</div>