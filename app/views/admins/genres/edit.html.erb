<div class="container">
  <span class="page-title">ジャンル編集</span>
  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @genre, url: admins_genre_path, local:true do |f| %>
      <span class="edit-genre">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </span>
      <% end %>
    </div>
  </div>
</div>