<div class="container">
  <span class"page-title">ジャンル一覧・追加</span>
  <div class="row">

    <div class="col-md-4">
      <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
      <table class="table genre-add">
        <tbody>
          <tr>
            <!--<th><%= f.label :ジャンル名 %></th>　　-->
            <th><%= f.text_field :name %></th>
            <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
          </tr>
        </tbody>
      </table>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admins_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>