<div class="container">
  <h1>会員情報編集</h1>
  <%= form_with model: @customer, url: admins_customer_path , local:true do |f| %>

  <h3>会員ID</h3>
  <h3>氏名 <%= f.text_field :last_name %> <%= f.text_field :first_name %></h3>
  <h3>フリガナ <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kanaast_name %></h3>
  <h3>郵便番号 <%= f.text_field :postal_code %></h3>
  <h3>住所 <%= f.text_field :address %></h3>
  <h3>電話番号 <%= f.number_field :telephone_number %></h3>
  <h3>メールアドレス <%= f.text_field :email %></h3>
  <h3>会員ステータス
  <%= f.radio_button :is_active, :valid %>
  <%= f.label :is_active, "有効", {value: :valid, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :withdrawal %>
  <%= f.label :is_active, "退会", {value: :withdrawal, style: "display: inline-block;"} %></h3>

  <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>