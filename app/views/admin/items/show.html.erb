<div class="container">
  <h1>商品詳細</h1>
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @items, image, :fill, 100, 100, fallback: "no_image.jpg" %>
    </div>

    <div class="col-md-9">
      <h3>商品名</h3>
      <h3>商品説明</h3>
      <h3>ジャンル</h3>
      <h3>税込価格(税抜価格)</h3>
      <h3>販売ステータス</h3>
      <td><%= link_to '編集する', edit_admins_item_path(@item), class: "btn btn-success" %></td>
    </div>
  </div>
</div>